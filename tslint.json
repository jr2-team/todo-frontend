{
    "extends": [
        "tslint:latest", 
        "tslint-react"
    ],
    "rules": {
        "eofline": false,
        "quotemark": [true, "single"],
        "max-line-length": [true, 100],
        "curly": [true, "ignore-same-line"],
        "no-console": [false, "log", "error"]
    },
    "linterOptions": { 
        "exclude": [
            "config/**/*.js", 
            "node_modules/**/*.ts", 
            "coverage/lcov-report/*.js"
        ]
    }
}