{
    "extends": [
        "tslint:recommended", 
        "tslint-react"
    ],
    "linterOptions": { 
        "exclude": [
            "node_modules/**/*.ts"
        ]
    },
    "rules": {
        "eofline": false,
        "no-console": false,
        "quotemark": [true, "single"],
        "max-line-length": [true, 100],
        "curly": [true, "ignore-same-line"],
        "semicolon": [true, "never"],
        "object-literal-sort-keys": false
    }
}